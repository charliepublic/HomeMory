<view class='all-container'>
  <view class='welcome-group1' style=' text-align: center;'  wx:if = "{{!haveFamily}}">
    <text >
      欢迎来到HomeMory 家庭管理
    </text>
  </view>

  <view class='welcome-group2' style=' text-align: center;'  wx:if = "{{haveFamily}}">
    <text >
      欢迎来到HomeMory 家庭管理
    </text>
  </view>
  <!-- 是否显示家庭信息 -->

  <view class='create-group' wx:if="{{!haveFamily}}">
    <button class='create-button' bindtap='createNewFamily'>新建一个家庭</button>
  </view>

  <view wx:else="{{haveFamily}}">
    <view style=' text-align: center;'>
      <view>家庭名称————{{homeName}}</view>
    </view>
    <button open-type='share' plain='true'>
      添加你的家庭成员
    </button>
    
    <view wx:for="{{homeMemberList}}" wx:for-item="member">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="data:image/{{member.type}};base64,{{member.content}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{member}}成员姓名</view>
        <view wx:if="{{isAdministrator}}">
          <button class="weui-cell__ft" bindtap='delet' data-item='{{memberItem}}' data-index='{{index}}'>删除该成员</button>
        </view>
      </view>
    </view>

    <view>
      <view wx:if="{{isAdministrator}}">
        <button bindtap='quit'>
          解散家庭
        </button>
      </view>
      <view wx:else>
        <button bindtap='quit'>
          退出该家庭
        </button>
      </view>

    </view>

  </view>
</view>
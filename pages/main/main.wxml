<!--pages/main/main.wxml-->
<view style=' text-align: center;'>
  <text>
    欢迎来到HomeMory 家庭管理
  </text>
</view>

<!-- 是否显示家庭信息 -->

<!-- Todo: 修改 havefamily -->
<view wx:if="{{!haveFamily}}">
  <button  type='primary' bindtap='createNewFamily'>新建一个家庭</button>
</view>
<view wx:else = "{{haveFamily}}">
  <view style=' text-align: center;'>
    <text>家庭信息</text>
    <view>家庭名称————{{homeName}}</view>
  </view>

  <!-- 此处需要将button缩小并去掉边框颜色 -->
  <button open-type='share' plain='true'> <image src='../../static/picture/invite.png' mode='widthFix'></image></button>
  <view wx:for= "{{[0,1,2,3,4]}}" wx:for-item = "member" >
    <view>
      <image  mode="aspectFill" src =""></image>
      {{member}}
      <view wx:if="{{isAdministrator}}">
        <button bindtap='delet'>删除该成员</button>
      </view>
      
    </view>
  </view>
  <view>
    <view wx:if="{{isAdministrator}}">
        <button bindtap='quit'>
          解散家庭
        </button>
    </view>
    <view wx:else>
        <button bindtap='quit'>
          退出该家庭
        </button>
    </view>
    
  </view>
</view>



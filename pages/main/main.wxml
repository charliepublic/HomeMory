<!--pages/main/main.wxml-->
<view style=' text-align: center;'>
  <text>
    欢迎来到HomeMory 家庭管理
  </text>
</view>

<!-- 是否显示家庭信息 -->
<view wx:if="{!haveFamily}}">
  <button  type='primary' bindtap='createNewFamily'>新建一个家庭</button>
</view>
<view wx:else>
  <view style=' text-align: center;'>
    <text>家庭信息</text>
    <view>家庭名称————我爱我家</view>
  </view>
  <view wx:for= "{{[0,1,2,3,4]}}" wx:for-item = "item" >
    <view>
      {{item}}
      <button>删除</button>
    </view>
  </view>
</view>



<!-- 第二部分：家庭名称 -->
<view class='haveFamily'>
  <view class='top'>
    <view class='NewFamily animated fadeInUp'>
      <view>家庭名称————{{homeMemberList[0].homeName}}</view>
    </view>

    <!-- 第三部分 :添加家庭成员-->
    <button class="button-add weui-btn" open-type='share'>
      添加你的家庭成员
    </button>
  </view>


  <!-- 分割线 -->
  <view wx:for="{{homeMemberList}}" wx:for-item="member" wx:key="*this">
    <view class="weui-cell" style='width: 90%;'>
      <view class="weui-cell__hd">
        <image class='icon' src="{{member.icon}}"></image>
      </view>
      <view class="weui-cell__bd">{{member.userName}}</view>
      <view wx:if="{{isAdministrator}}">
        <button class="weui-cell__ft" bindtap='delet' data-item='{{memberItem}}' data-index='{{index}}'>删除</button>
      </view>
    </view>
  </view>

  <view class='button weui-btn'>
    <view wx:if="{{isAdministrator}}">
      <button type="warn" bindtap='quit'>
        解散家庭
      </button>
    </view>
    <view wx:else>
      <button type='warn' bindtap='quit'>
        退出该家庭
      </button>
    </view>

  </view>

</view>
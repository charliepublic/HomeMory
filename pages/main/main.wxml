<view class='all-container'>
  <!-- 第二部分：家庭名称 -->
  <view wx:if="{{haveFamily}}">
    <view class='haveFamily'>
      <view class='animated fadeInUp'>
        <view style=' text-align: center;'>
          <view class='NewFamily'>家庭名称————{{homeMemberList[0].homeName}}</view>
        </view>
      </view>

      <!-- 第三部分 :添加家庭成员-->
      <view wx:if="{{haveFamily}}">
        <button class="weui-btn" open-type='share'>
          添加你的家庭成员
        </button>

        <!-- 分割线 -->
        <view wx:for="{{homeMemberList}}" wx:for-item="member" wx:key="*this">
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <image src="{{member.icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">成员姓名</view>
            <view wx:if="{{isAdministrator}}">
              <button class="weui-cell__ft" bindtap='delet' data-item='{{memberItem}}' data-index='{{index}}'>删除该成员</button>
            </view>
          </view>
        </view>

        <view>
          <view wx:if="{{isAdministrator}}">
            <button class="weui-btn" type="warn" bindtap='quit'>
              解散家庭
            </button>
          </view>
          <view wx:else>
            <button class="weui-btn" bindtap='quit' style="margin-bottom: 20rpx;">
              退出该家庭
            </button>
          </view>

        </view>
      </view>
    </view>
  </view>
</view>
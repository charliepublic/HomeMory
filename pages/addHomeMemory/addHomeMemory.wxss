page {
  background-color: #fffffb;
}

.all {
  width: 90%;
  height: auto;
  border: 2rpx solid white;
  box-sizing: border-box;
  border-radius: 15rpx;
  margin: 10% auto;
  background-color: white;
  box-shadow: 4rpx 4rpx 10rpx #104e5e;
}

.content-group .input-style {
  font-size: 30rpx;
}

.content-group {
  width: 90%;
  height: auto;
  border: 2rpx solid #e4e4e4;
  box-sizing: border-box;
  border-radius: 15rpx;
  margin: 5% auto;
  background-color: white;
}

.text-container {
  width: 100%;
}

.content-group .image-container {
  overflow: hiddenï¼›;
}

.button-group {
  width: 80%;
  height: 400rpx;
  border-top: 2rpx solid #bdc0ba;
  box-sizing: border-box;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  background-color: white;
}

.button-group .btn1, .button-group .btn2 {
  width: 80%;
  background-color: white;
}

.button-group .btn3 {
  width: 40%;
  background-color: #104e5e;
  color: white;
}

.button-group button {
  box-shadow: 0px 0px 10px #f0f3f4 inset;
}

button::after {
  border: none;
}

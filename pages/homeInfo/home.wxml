<!--pages/home/home.wxml-->
<view class='both'>
  <view class='search-group'>
    <view class='searchlogo'>
      <!-- 该页面进行文件的上传下载 -->
      <image bindtap='input' class='image' src='../../static/picture/add.png' mode='top right '></image>
    </view>
    <view class='searchtext-group'>
      <input class='search-input' placeholder-class='placeholder' placeholder="查找关键字" maxlength="25" bindinput='setTxt'></input>
      <view class='submit-button'>
        <button class='submit' bindtap='search'>查询</button>
      </view>
    </view>
  </view>

  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio" wx:for="{{items}}">
      <radio value="{{item.name}}" checked="{{item.checked}}" /> {{item.value}}
    </label>
  </radio-group>
  <view class='line'></view>

  <view class='bottom-content' wx:for="{{memoryList}}" wx:for-item="member" wx:for-index="index">
    <view class='image-group' wx:for="{{member.homeFileList}}" wx:for-item="item">
     <!-- todo此处在if处判断返回是不是图片 -->
      <view wx:if="{{item.isPicture}}">
        <image class='image' mode="aspectFill" src="{{url + item.filePath}}"></image>
      </view>
       <!-- todo此处在if处判断返回是不是图片 -->
      <view wx:if="{{!item.isPicture}}">
        <video src="{{url + item.filePath}}" show-play-btn="false" play-btn-position="center"></video>
      </view>



    </view>
    <view>{{member.homeFileList[0].recordContent}}</view>
    <view class='people-time'>
      <text class='people'>发布人  {{member.openId}} </text>
      <text class='time'>发布时间   {{member.time}} </text>
    </view>

    <view class='delete-button'>
      <button class='delete' bindtap='delet' data-index='{{index}}'>删除</button>
    </view>
  </view>
</view>
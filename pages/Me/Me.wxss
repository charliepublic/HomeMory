.userinfo {
  /* border: 1px solid black;
  box-sizing: border-box; */
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 50%;
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  margin-top: 5%;
}

.userinfo .nickname-group {
  margin-bottom: 20rpx;
  font-size: 40rpx;
}

.userinfo .nickname-group .userinfo-nickname {
  color: black;
}


page {background-color: #d6eaf8;}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 50%;
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}

.avatar-group{
  padding-top: 10%;
  height: 250rpx; 
  background-color: #8ac0e2;
  box-shadow: 0 0 10rpx #104e5e;
}

.userinfo .nickname-group {margin-bottom: 20rpx;font-size: 40rpx;}

.userinfo .nickname-group .userinfo-nickname {color: black;}

.all-content .bottom-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.file-group {margin-top: 80rpx;}

.age-group, .city-group, .homeland-group, .file-group, .openid-group {
  width: 95%;
  height: 80rpx;
  /* border: 1px solid beige; */
  margin-bottom: 20rpx;
  line-height: 80rpx;
  background-color: #f4f6f6;
  box-shadow: 0 0 8rpx #104e5e;
  /* border-radius: 10rpx; */
}

.age-group .age-text, .city-group .city-text, .homeland-group .homeland-text,
.file-group .file-text, .openid-group .openid-text {
  float: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  font-family: Microsoft Yahei;
}

.button-group {margin-top: 40rpx;}

.button-group .button1 {
  background-color: #d1e4f0;
  color: #787b7d;
  width: 95%;
}
.button-group .button1::after{border: none;}


<!--pages/Me/Me.wxml-->
<view class="userinfo" wx:if = "{{!havePicture}}">
  <open-data background-size="cover" class="userinfo-avatar" type="userAvatarUrl"></open-data>
</view>
<view class="userinfo" wx:if = "{{havePicture}}">
  <image  mode="aspectFill" src='{{picture}}'></image>
</view>



<view >
  <view style=' text-align: center;'>
  昵称：{{name}}
  </view>
  <view style=' text-align: center;'>
  年龄：{{age}}
  </view>
  <view style=' text-align: center;'>
    所在城市：{{location}}
  </view>
  <view style=' text-align: center;'>
    家乡：{{homeland}}
  </view>
</view>

<view style=' text-align: center;'>
  档案管理积分：10086
</view>

<button bindtap='changeInfo'>修改信息</button>

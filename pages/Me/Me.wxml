<!--pages/Me/Me.wxml-->
<view class="userinfo">
  <open-data background-size="cover" class="userinfo-avatar" type="userAvatarUrl"></open-data>
  <open-data class="userinfo-nickname" type="userNickName"></open-data>
</view>
<view wx:if="{{isNew}}">
  <view style=' text-align: center;'>
  年龄：{{age}}
  </view>
  <view style=' text-align: center;'>
    所在城市：<open-data type="userCity"></open-data>
  </view>
  <view style=' text-align: center;'>
    家乡：{{homeland}}
  </view>
</view>

<view style=' text-align: center;'>
  档案管理积分：10086
</view>
<view style=' text-align: center;'>
  openid：{{openid}}
</view>
<button bindtap='changeInfo'>修改信息</button>

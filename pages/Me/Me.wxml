<!--pages/Me/Me.wxml-->

<view class='avatar-group animated zoomIn'>
  <view >
    <image class="userinfo" src='{{userInfo.avatarUrl}}'></image>
  </view>
</view>


<view class='all-content animated zoomIn'>
  <!-- 下半部分 -->
  <view class='bottom-content'>
    <view class='file-group' style=' text-align: center;'>
      <text class='file-text'>昵称：{{userInfo.nickName}}</text>
    </view>
    <view class='age-group' style=' text-align: center;'>
      <text class='age-text'>性别：{{userInfo.gender? "男":"女"}}</text>
    </view>
    <view class='city-group' style=' text-align: center;'>
      <text class='city-text'>所在城市：{{userInfo.city}}</text>
    </view>
    <view class='homeland-group' style=' text-align: center;'>
      <text class='homeland-text'>家乡：{{userInfo.country}}</text>
    </view>
  </view>

  <view class='button-group animated zoomIn'>
    <button class='button1' bindtap='changeInfo'>修改信息</button>
  </view>
</view>
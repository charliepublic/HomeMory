<!--pages/Me/Me.wxml-->

<!-- 如果用户没有头像获取微信头像 -->
<view class='avatar-group'>
  <view class="userinfo" wx:if="{{!havePicture}}">
    <open-data background-size="cover" class="userinfo-avatar" type="userAvatarUrl"></open-data>
  </view>

  <!-- 如果用户有头像，获取数据库中头像 -->
  <view class="userinfo" wx:elif="{{havePicture}}">
    <image mode="aspectFill" src='{{picture}}'></image>
  </view>
</view>

<view class='all-content'>
  <!-- 下半部分 -->
  <view class='bottom-content'>
    <view class='file-group' style=' text-align: center;'>
      <text class='file-text'>昵称：{{name}}</text>
    </view>
    <view class='age-group' style=' text-align: center;'>
      <text class='age-text'>年龄：{{age}}</text>
    </view>
    <view class='city-group' style=' text-align: center;'>
      <text class='city-text'>所在城市：{{location}}</text>
    </view>
    <view class='homeland-group' style=' text-align: center;'>
      <text class='homeland-text'>家乡：{{homeland}}</text>
    </view>



  </view>

  <view class='button-group'>
    <button class='button1' bindtap='changeInfo'>修改信息</button>
  </view>
</view>